{
    "name": "xandeadx/drupal-project",
    "description": "Project template for Drupal 8 projects with composer",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "require": {
        "webflo/drupal-core-strict": "^8.6.3",
        "drupal/core": "^8.6.3",
        "drupal-composer/drupal-scaffold": "^2.5",
        "drush/drush": "^9.5",
        "drupal/console": "^1.8"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "preferred-install": "dist",
        "autoloader-suffix": "Drupal8",
        "optimize-autoloader": true
    },
    "extra": {
        "merge-plugin": {
            "recurse": true,
            "replace": false,
            "merge-extra": false
        },
        "installer-paths": {
            "core": ["type:drupal-core"],
            "modules/contrib/{$name}": ["type:drupal-module"],
            "modules/sandbox/{$name}": ["type:drupal-sandbox-module"],
            "modules/custom/{$name}": ["type:drupal-custom-module"],
            "profiles/{$name}": ["type:drupal-profile"],
            "themes/{$name}": ["type:drupal-theme", "type:drupal-custom-theme"],
            "drush/{$name}": ["type:drupal-drush"],
            "libraries/{$name}": ["type:drupal-library"]
        },
        "drupal-scaffold": {
            "initial": {
                ".htaccess": ".htaccess",
                "robots.txt": "robots.txt",
                "sites/development.services.yml": "sites/development.services.yml"
            },
            "includes": [
                "modules/README.txt",
                "profiles/README.txt",
                "sites/README.txt",
                "themes/README.txt"
            ],
            "excludes": [
                ".htaccess",
                "robots.txt",
                "README.txt",
                "INSTALL.txt"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "Drupal\\Core\\Composer\\": "core/lib/Drupal/Core/Composer"
        }
    },
    "scripts": {
        "pre-autoload-dump": "Drupal\\Core\\Composer\\Composer::preAutoloadDump",
        "post-autoload-dump": "Drupal\\Core\\Composer\\Composer::ensureHtaccess",
        "post-package-install": "Drupal\\Core\\Composer\\Composer::vendorTestCodeCleanup",
        "post-package-update": "Drupal\\Core\\Composer\\Composer::vendorTestCodeCleanup",
        "drupal-phpunit-upgrade-check": "Drupal\\Core\\Composer\\Composer::upgradePHPUnit",
        "drupal-phpunit-upgrade": "@composer update phpunit/phpunit phpspec/prophecy symfony/yaml --with-dependencies --no-progress",
        "phpcs": "phpcs --standard=core/phpcs.xml.dist --runtime-set installed_paths $($COMPOSER_BINARY config vendor-dir)/drupal/coder/coder_sniffer --",
        "phpcbf": "phpcbf --standard=core/phpcs.xml.dist --runtime-set installed_paths $($COMPOSER_BINARY config vendor-dir)/drupal/coder/coder_sniffer --"
    },
    "repositories": [{
        "type": "composer",
        "url": "https://packages.drupal.org/8"
    }]
}
